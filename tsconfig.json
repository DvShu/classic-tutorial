{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "ESNext"],
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true
  },
  "include": ["docs"],
  "exclude": ["node_modules"]
}
